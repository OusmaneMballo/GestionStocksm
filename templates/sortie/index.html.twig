{% extends 'accueil.html.twig' %}

{% block title %}Gestion | Sortie{% endblock %}

{% block body %}
    <div class="container row">
        <div class="card col-md-6">
            <div class="card-header">Liste des sorties</div>
            <div class="card-body">
                <table class="table table-striped">
                    <tr>
                        <th>ID</th>
                        <th>Date</th>
                        <th>Produit</th>
                        <th>Quantite</th>
                    </tr>
                    {% for s in sorties %}
                        <tr>
                            <td>{{ s.getId() }}</td>
                            <td>{{ s.getSortieAt    ()|date('d/m/y') }}</td>
                            <td>{{ s.getProduit() }}</td>
                            <td>{{ s.getQteS() }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
        <div class="card col-md-6">
            <div class="card-header">Formulaire de gestion des entrees</div>
            <div class="card-body">
                {{ form(form) }}
            </div>
        </div>
    </div>
{% endblock %}
